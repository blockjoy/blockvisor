[Unit]
Description=Blockvisor Daemon
# Ensure we have network before starting daemon
Wants=network-online.target
After=syslog.target network.target network-online.target
Requires=babel-bus.service tmux.service

[Service]
# Debug logging for now
Environment="RUST_LOG=debug,firec=trace"
# TODO: We need to run things as a special system user.
# User=blockvisor
ExecStart=/usr/bin/blockvisord
Restart=always

[Install]
WantedBy=multi-user.target
